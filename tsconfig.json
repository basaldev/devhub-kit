{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "diagnostics": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/",
    "pretty": true,
    "removeComments": true,
    "strict": true
  },
  "exclude": ["src/**/*.spec.*", "node_modules"],
  "include": ["src", "typings"]
}
